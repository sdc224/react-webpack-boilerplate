{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"keyofStringsOnly": true,
		"lib": ["DOM", "ESNext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "build",
		"pretty": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"target": "es6",
		"noResolve": false,
		"typeRoots": ["node_modules/@types", "src/@types"],
		"types": ["vite/client"],
		"baseUrl": "./",
		"importsNotUsedAsValues": "remove",
		"paths": {
			"@app/*": ["./*", "./"],
			"@src/*": ["./src/*", "./src/"],
			"@types/*": ["./src/@types/*", "./src/@types/"],
			"@assets/*": ["./src/assets/*", "./src/assets/"],
			"@images/*": ["./src/assets/images/*", "./src/assets/images/"],
			"@theme/*": ["./src/assets/theme/*", "./src/assets/theme/"],
			"@components/*": ["./src/components/*", "./src/components/"],
			"@containers/*": ["./src/containers/*", "./src/containers/"],
			"@views/*": ["./src/views/*", "./src/views/"],
			"@layouts/*": ["./src/layouts/*", "./src/layouts/"],
			"@routes/*": ["./src/routes/*", "./src/routes/"],
			"@actions/*": ["./src/actions/*", "./src/actions/"],
			"@reducers/*": ["./src/reducers/*", "./src/reducers/"],
			"@selectors/*": ["./src/selectors/*", "./src/selectors/"],
			"@sagas/*": ["./src/sagas/*", "./src/sagas/"],
			"@store/*": ["./src/store/*", "./src/store/"],
			"@reduxTypes/*": ["./src/reduxTypes/*", "./src/reduxTypes/"],
			"@utils/*": ["./src/utils/*", "./src/utils/"],
			"@history/*": ["./src/history/*", "./src/history/"]
		}
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"configs",
		"acceptance-tests",
		"webpack",
		"jest",
		"internals",
		"__test__"
	],
	"include": ["./src/**/*", "@types"]
}
